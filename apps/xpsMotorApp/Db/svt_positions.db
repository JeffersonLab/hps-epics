# Database for SVT positions





record(calc, "$(pref)hps:svt:top:si") {
  field(DESC, "SVT Top Silicon position")
  field(PINI, "YES")
  field(CALC, "A*B+C")
  field(INPA, "$(pref)hps:svt_top:motor.RBV CPP")
  field(INPB, "-0.391")
  field(INPC, "7.38")
  field(SCAN, "Passive")
  field(CALC, "B*A+C")
  field(PREC, "3")
  field(EGU , "mm" )
}

