# Database for converter positions
#
# V.K.  July 16, 2012
# Macro paramters:
#   $(P)        - XPS Controller name 
#   $(R)        - Motor (R=m1)

alias("$(P)$(R)","$(pref)hd:converter:motor")

record(ao,"$(pref)hd:converter:motionCondit"){
  field(DTYP,"Soft Channel")
  field(VAL,"0.1")
  field(SCAN, "Passive")
}
record(ao,"$(pref)hd:converter:home"){
  field(DTYP,"Soft Channel")
  field(VAL,"0.")
  field(PINI, "YES")
  field(SCAN, "Passive")
}
record(ao,"$(pref)hd:converter:home:proc"){
  field(DTYP,"Soft Channel")
  field(DOL,"$(pref)hd:converter:home")
  field(OMSL,"closed_loop")
  field(OUT,"$(P)$(R).VAL PP NMS")
  field(SCAN, "Passive")
}
record(calc, "$(pref)hd:converter_at_home") {
  field(INPA, "$(P)$(R).RBV")
  field(INPB, "$(pref)hd:converter:home")
  field(INPC, "$(P)$(R).DMOV")
  field(INPE, "$(pref)hd:converter:motionCondit")
  field(SCAN, ".2 second")
  field(CALC, "(ABS(A-B)<E)&&(C=1)?1:0")
}
