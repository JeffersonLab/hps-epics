# Database for Collimator positions
#
# V.K.  July 16, 2012
# Macro paramters:
#   $(P)        - XPS Controller name (P=halldxps4:)
#   $(R)        - Motor (R=m1)

alias("$(P)$(R)","$(pref)hd:collimator:motor")

record(ao,"$(pref)hd:collimator:motionCondit"){
  field(DTYP,"Soft Channel")
  field(VAL,"0.1")
  field(SCAN, "Passive")
}
record(ao,"$(pref)hd:collimator:block"){
  field(DTYP,"Soft Channel")
  field(VAL,"-60.")
  field(PINI, "YES")
  field(SCAN, "Passive")
}
record(ao,"$(pref)hd:collimator:block:proc"){
  field(DTYP,"Soft Channel")
  field(DOL,"$(pref)hd:collimator:block")
  field(OMSL,"closed_loop")
  field(OUT,"$(P)$(R).VAL PP NMS")
  field(SCAN, "Passive")
}
record(calc, "$(pref)hd:collimator_at_block") {
  field(INPA, "$(P)$(R).RBV")
  field(INPB, "$(pref)hd:collimator:block")
  field(INPC, "$(P)$(R).DMOV")
  field(INPE, "$(pref)hd:collimator:motionCondit")
  field(SCAN, ".2 second")
  field(CALC, "(ABS(A-B)<E)&&(C=1)?1:0")
}
